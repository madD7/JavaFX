<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>

<!--
    Button Two is stacked on the Label One. Background color is set
    to verify the stacking.
    Thus, the Zeroth child is at the bottom, and the last added child is added on top.
    The Stack helps in layering, add images to buttons or labels,
    thus creating images with names. etc
-->

<StackPane fx:controller="sample.Controller"
           xmlns:fx="http://javafx.com/fxml">
    <Button text="Label One" style="-fx-background-color: green"/>
    <Label text="Button Two" style="-fx-background-color: blue"/>
</StackPane>