<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<!-- Description:
<GridPane fx:controller="sample.Controller" == controller attribute tells runtime
                                                which class (<package>.<class>) is the controller for this window.
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
</GridPane>

The GridPane is not having any child elements, the window will be empty.
 -->

<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Hello World" textFill="blue">
        <Font name="Times New Roman bold" size="20"></Font>
    </Label>
</GridPane>

